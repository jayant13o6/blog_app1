<!DOCTYPE html>
<html>
    <head>
       <meta charset = 'UTF-8'>
       <meta name="viewport" content="width=device-width, initial-scale=1"> 
       <title>Blog Mark1 | <%= title %> </title>
    </head>

    <body>
        <%- include('D:/Machine learning/topics/backend/blog_app/partials/nav.ejs') %>

        <div class='create_one'>
            <h2>All blogs</h2>
            <% if (blogs.length >0) { %>
                <% blogs.forEach(blog =>{ %>
                <a class='single_link' href = "/blogs/<%- blog._id %>">
                <h3 class="title"><%= blog.title %></h3></a>
                <p class='snippet'><%= blog.snippet %></p>
            <%    })   %>
            <%} else {%>
                <p>Thats all folks!!</p>
        <%    }   %>
        </div>
    </body>
</html>